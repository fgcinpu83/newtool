{
    "manifest_version": 3,
    "name": "MPO1221 Helper Pro",
    "version": "1.0",
    "description": "Assistant for MPO1221 Sportsbook and Account Management",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icon.png",
                "injected.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}